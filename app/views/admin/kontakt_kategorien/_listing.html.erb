<table>
  <tr class="pretty">
	<th>Icon</th>
    <th><%= sortable "name", "Name" %></th>
    <th><%= sortable "titel", "Titel" %></th>
	<th><%= sortable "sorter", "Sorter" %></th>
	<th>K.Bereich</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>


<% data.each do |help_me| %>
  <tr class="<%= cycle('even', 'odd') %>">
	<td><%= image_tag help_me.sidebar_icon.url(:thumb) %></td>
    <td><%= help_me.name %></td>
    <td><%= help_me.titel %></td>
	<td><%= help_me.sorter %></td>
	<td><%= !help_me.kontakt_bereich.nil? ? help_me.kontakt_bereich.titel : 'keiner' %></td>
    <td><%= link_to show_pic, admin_kontakt_kategorie_path(help_me.id) %></td>
    <td><%= link_to edit_pic, edit_admin_kontakt_kategorie_path(help_me.id) %></td>
    <td><%= link_to del_pic, admin_kontakt_kategorie_path(help_me.id), :confirm => 'Bist du wirklich Sicher?', :method => :delete %></td>
  </tr>
<% end %>
</table>