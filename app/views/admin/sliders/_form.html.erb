	<h3>Portfolio_Bereiche:</h3>
 <% f.fields_for :portfolio_bereiche_sliders do |builder| %>
    <%= render "portfolio_bereiche_slider_fields", :f => builder %>
  <% end %>
  <p class="add_nested_form"><%= link_to_add_fields "portfolio hinzufuegen", f, :portfolio_bereiche_sliders %></p>
</div>
<div class="trennertop clear"></div>


