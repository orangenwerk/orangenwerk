<table>
  <tr class="pretty">
	<th>bild</th>
    <th><%= sortable "name", "Name" %></th>
	<th><%= sortable "sorter", "Sorter" %></th>
	<th>Portfolio_b.</th>
	<th>Produkt_b.</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>


<% data.each do |help_me| %>
  <tr class="<%= cycle('even', 'odd') %>">
	<td><%= image_tag help_me.bild.url(:thumb) %></td>
    <td><%= help_me.name %></td>
	<td><%= help_me.sorter %></td>
	<td><%= help_me.portfolio_bereiche.count %></td>
	<td><%= help_me.produkt_bereiche.count %></td>
	<td><%= link_to show_pic, admin_slider_path(help_me.id), :class => 'a_link_show' %></td>
    <td><%= link_to edit_pic, edit_admin_slider_path(help_me.id), :class => 'a_link_edit' %></td>
    <td><%= link_to del_pic, admin_slider_path(help_me.id), :confirm => 'Bist du wirklich Sicher?', :method => :delete, :class => 'a_link_del' %></td>
  </tr>
<% end %>
</table>