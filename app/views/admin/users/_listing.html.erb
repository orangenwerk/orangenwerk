<table>
  <tr class="pretty">
    <th><%= sortable "name", "Name" %></th>
    <th><%= sortable "email", "E-Mail" %></th>
	<th>Rang</th>
	<th><%= sortable "created_at", "Seit:" %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>


<% data.each do |help_me| %>
  <tr class="<%= cycle('even', 'odd') %>">
    <td><%= help_me.name %></td>
    <td><%= help_me.email %></td>
	<td><%= user_rang(help_me.id) %></td>
	<td><%= distance_of_time_in_words(help_me.created_at, Time.now) %></td>
	<td><%= link_to show_pic, admin_user_path(help_me.id), :class => 'a_link_show' %></td>
    <td><%= link_to edit_pic, edit_admin_user_path(help_me.id), :class => 'a_link_edit' %></td>
    <td><%= link_to del_pic, admin_user_path(help_me.id), :confirm => 'Bist du wirklich Sicher?', :method => :delete, :class => 'a_link_del' %></td>
  </tr>
<% end %>
</table>