<!--
#  name       :string(255)
#  titel      :string(255)
#  headline   :string(255)
#  datum      :datetime
#  autor      :string(255)
#  inhalt     :text
-->
<table>
  <tr class="pretty">
	<th>Autor</th>
    <th><%= sortable "name", "Name" %></th>
    <th><%= sortable "titel", "Titel" %></th>
	<th><%= sortable "datum", "Datum" %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>


<% data.each do |help_me| %>
  <tr class="<%= cycle('even', 'odd') %>">
	<td><%= help_me.autor %></td>
    <td><%= help_me.name %></td>
    <td><%= help_me.titel %></td>
	<td><%= distance_of_time_in_words(help_me.datum, Time.now) %></td>
	<td><%= link_to show_pic, admin_news_eintrag_path(help_me.id), :class => 'a_link_show' %></td>
    <td><%= link_to edit_pic, edit_admin_news_eintrag_path(help_me.id), :class => 'a_link_edit' %></td>
    <td><%= link_to del_pic, admin_news_eintrag_path(help_me.id), :confirm => 'Bist du wirklich Sicher?', :method => :delete, :class => 'a_link_del' %></td>
  </tr>
<% end %>
</table>