<!--
#  name        :string(255)
#  titel       :string(255)
#  kunden_name :string(255)
#  firma       :string(255)
#  inhalt      :text
#  kunde_id    :integer(4)
-->
<table>
  <tr class="pretty">
    <th><%= sortable "name", "Name" %></th>
	<th>Kunde</th>
	<th>Firma</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>


<% data.each do |help_me| %>
  <tr class="<%= cycle('even', 'odd') %>">
    <td><%= help_me.name %></td>
	<th><%= help_me.kunden_name %></th>
	<th><%= help_me.firma %></th>
	<td><%= link_to show_pic, admin_kunden_meinung_path(help_me.id), :class => 'a_link_show' %></td>
    <td><%= link_to edit_pic, edit_admin_kunden_meinung_path(help_me.id), :class => 'a_link_edit' %></td>
    <td><%= link_to del_pic, admin_kunden_meinung_path(help_me.id), :confirm => 'Bist du wirklich Sicher?', :method => :delete, :class => 'a_link_del' %></td>
  </tr>
<% end %>
</table>