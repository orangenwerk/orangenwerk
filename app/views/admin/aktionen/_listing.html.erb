<table>
  <tr class="pretty">
	<th>Bild</th>
    <th><%= sortable "name", "Name" %></th>
	<th><%= sortable "aktiv", "Aktiv" %></th>
	<th><%= sortable "zeitlimit", "Zeitlimit" %></th>
	<th><%= sortable "von", "Start-Datum" %></th>
	<th><%= sortable "bis", "End-Datum" %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>


<% data.each do |help_me| %>
  <tr class="<%= cycle('even', 'odd') %>">
	<td><%= image_tag help_me.bild.url(:thumb) %></td>
    <td><%= help_me.name %></td>
	<td><%= help_me.aktiv ? 'ja' : 'ne' %></td>
	<td><%= help_me.zeitlimit ? 'ja' : 'ne' %></td>
	<td><%= help_me.von.strftime('%d.%m.%Y') %> </td>
	<td><%= help_me.bis.strftime('%d.%m.%Y') %></td>
	<td><%= link_to show_pic, admin_aktion_path(help_me.id), :class => 'a_link_show' %></td>
    <td><%= link_to edit_pic, edit_admin_aktion_path(help_me.id), :class => 'a_link_edit' %></td>
    <td><%= link_to del_pic, admin_aktion_path(help_me.id), :confirm => 'Bist du wirklich Sicher?', :method => :delete, :class => 'a_link_del' %></td>
  </tr>
<% end %>
</table>