<table>
  <tr class="pretty">
    <th><%= sortable "name", "Name" %></th>
    <th><%= sortable "email", "E-Mail" %></th>
	<th><%= sortable "created_at", "Seit" %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>


<% data.each do |help_me| %>
  <tr class="<%= cycle('even', 'odd') %>">
    <td><%= help_me.name %></td>
    <td><%= help_me.email %></td>
	<td><%= help_me.created_at.strftime('%d.%m.%Y') %></td>
    <td><%= link_to show_pic, admin_newsletter_abo_path(help_me.id) %></td>
    <td><%= link_to edit_pic, edit_admin_newsletter_abo_path(help_me.id) %></td>
    <td><%= link_to del_pic, admin_newsletter_abo_path(help_me.id), :confirm => 'Bist du wirklich Sicher?', :method => :delete %></td>
  </tr>
<% end %>
</table>