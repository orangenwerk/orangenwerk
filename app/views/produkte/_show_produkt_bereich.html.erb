<h1><%= produkt_bereich.titel if produkt_bereich.titel %></h1>
<div class="trennertop clear"></div>
<div class="no_padding"><%= raw @produkt_bereich.inhalt %></div>
<div class="icon_box">
<% if produkt_bereich.produkt_kategorien %>
<% @produkt_bereich.produkt_kategorien.each do |icon| %>
<%= render 'app_icons/produkt_kategorie', :icon => icon  %>
<% end %>
<% end %>
</div>
<div class="trenner clear"></div>

<h1>Referenzen</h1>
<div class="icon_box">
<% @rightside.nil? ? ref_count = 12 : ref_count = 8 %>
<% if @produkt_bereich.referenzen.count > 0 %>

	<% @produkt_bereich.referenzen.random(ref_count).each do |icon| %>
		<%= render 'app_icons/referenz_icon', :icon => icon  %>
	<% end %>
<% else %>
	<p>Referenzbilder folgen ...</p>
<% end %>

</div>

	
