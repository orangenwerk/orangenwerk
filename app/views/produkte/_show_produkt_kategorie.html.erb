<h1><%= @produkt_kategorie.titel %></h1>
<div class="trennertop clear"></div>
<div class="icon_box">
<% if @produkt_kategorie.produkte %>
<% @produkt_kategorie.produkte.each do |icon| %>
<%= render 'app_icons/produkt', :icon => icon  %>
<% end %>
<% end %>
</div>
<div class="trenner clear"></div>
<% if @produkt_kategorie.inhalt && @produkt_kategorie.inhalt != '' && @produkt_kategorie.inhalt != '<p> x</p>' && @produkt_kategorie.inhalt != '<p>x</p>'  && @produkt_kategorie.inhalt != '<p>&nbsp;x</p>' %>
<div class="no_padding">
	<%= raw @produkt_kategorie.inhalt %>
</div>

<br class="clear"/>
<div class="trenner clear"></div>
<% end %>
<h1>Referenzen</h1>
<div class="icon_box">
<% @rightside.nil? ? ref_count = 12 : ref_count = 8 %>
<% if @produkt_kategorie.referenzen.count > 2 %>
	<% @produkt_kategorie.referenzen.random(ref_count).each do |icon| %>
		<%= render 'app_icons/referenz_icon', :icon => icon  %>
	<% end %>
<% elsif @produkt_bereich.referenzen.count > 0 %>
	<% @produkt_bereich.referenzen.random(ref_count).each do |icon| %>
		<%= render 'app_icons/referenz_icon', :icon => icon  %>
	<% end %>
<% else %>
	<p>Referenzbilder folgen ...</p>
<% end %>
</div>