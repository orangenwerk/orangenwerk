<%= javascript_include_tag 'fckeditor/fckeditor' %>
<script type="text/javascript">
window.onload = function()
{
	var js_path = "/javascripts";
    var base_path = js_path+"/fckeditor/";
	var fck_height = "450px";
	var fck_width = "785px";
	var fck_toolz = "Simple"
	
  $('textarea.fck').click(function(){
	var oFCKeditor = new FCKeditor(this.id, fck_width, fck_height, fck_toolz);
	oFCKeditor.BasePath = base_path;
	oFCKeditor.Config['CustomConfigurationsPath'] = js_path+'/fckcustom.js';
	oFCKeditor.Config['EditorAreaCSS'] = '/stylesheets/2_fontz.css';
	<% if Rails.env.development? %>
	oFCKeditor.Config['GoogleMaps_Key'] = 'ABQIAAAA0pBz3CouWmIH1Cx4mQpjvRQDNUKtWYO0YNsBQklWEm0Tg_LWZBTJujo6Ql3K5hamM7jJswXrltiv-w';
	<% else %>
	oFCKeditor.Config['GoogleMaps_Key'] = 'ABQIAAAAgp5iG6N_MddKQ1J5-z-AnBTCJnVLqoFUPAhNdh2wl2i0bLSJvhStUQVQz1AfgdkEYvRDUOwuw2nsGw';
	<% end %>
	oFCKeditor.ReplaceTextarea(); 
  });

$('textarea.live_fck').live('click', function(){
	var oFCKeditor = new FCKeditor(this.id, fck_width, fck_height, fck_toolz);
	oFCKeditor.BasePath = base_path;
	oFCKeditor.Config['CustomConfigurationsPath'] = js_path+'/fckcustom.js';
	oFCKeditor.Config['EditorAreaCSS'] = '/stylesheets/2_fontz.css';
	<% if Rails.env.development? %>
	oFCKeditor.Config['GoogleMaps_Key'] = 'ABQIAAAA0pBz3CouWmIH1Cx4mQpjvRQDNUKtWYO0YNsBQklWEm0Tg_LWZBTJujo6Ql3K5hamM7jJswXrltiv-w';
	<% else %>
	oFCKeditor.Config['GoogleMaps_Key'] = 'ABQIAAAAgp5iG6N_MddKQ1J5-z-AnBTCJnVLqoFUPAhNdh2wl2i0bLSJvhStUQVQz1AfgdkEYvRDUOwuw2nsGw';
	<% end %>
	oFCKeditor.ReplaceTextarea(); 
  });
};
</script>
